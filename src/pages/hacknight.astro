---
// Import the Layout component at the top of your page file
import Tabs from '../components/hacknight/HackNightTabs.tsx';
import Layout from '../layouts/Layout.astro';

const heroPhoto = '/twd-hero-img.webp';
---

<Layout title="Hack Night">
  <div class="container">
    <header>
      <img src={heroPhoto} alt="TWD hero" class="hero-image" />
      <h1>Hack Night</h1>
      <p class="over-line">Education. Connection. Opportunity.</p>
      <p class="subtitle">—Every 4th Tuesday in Tulsa—</p>
      <p class="caption">The Best Place in the World for Web Developers!</p>
    </header>

    <br />

    <Tabs client:load />
  </div>
</Layout>

<style>
  /* styles.css */
  body,
  html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: 'Open Sans', sans-serif;
    color: white;
  }

  .container {
    max-width: 800px;
    margin: auto;
  }

  h1 {
    font-size: calc(1.7rem + 2.25vw);
    color: rgb(var(--accent-light));
    font-weight: 700;
  }

  header {
    text-align: center;
  }

  header p {
    line-height: 1.7;
  }

  .over-line {
    font-size: calc(1rem + 1vw);
    font-weight: 700;
  }

  .subtitle {
    font-size: calc(0.6rem + 0.65vw);
    font-weight: 500;
  }

  .caption {
    font-size: calc(0.7rem + 0.7vw);
    font-weight: 300;
    font-style: italic;
  }
</style>
